datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum PostType {
  news
  event
  server
}

model Post {
  id        Int          @id @default(autoincrement())
  type      PostType
  title     String?
  text      String?
  options   PostOption[]
  endDate   DateTime?
  name      String?
  ip        String?
  modpack   String?
  version   String?
  createdAt DateTime     @default(now())
}

model PostOption {
  id     Int    @id @default(autoincrement())
  text   String
  votes  Int    @default(0)
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int
}
